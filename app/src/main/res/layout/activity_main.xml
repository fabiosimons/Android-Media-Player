<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.fabio.mobileappscoursework.MainActivity">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/RepeatPanel"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            >

        <Button
            android:id="@+id/Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:drawableStart="@drawable/ic_playmain"
            android:text="@string/play"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/Shuffle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="63dp"
            android:drawableStart="@drawable/ic_shuffle"
            android:text="@string/shuffle"
            android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topPanel"
        android:divider="@color/colorDividerColor"
        android:dividerHeight="1dp">

    </ListView>




</RelativeLayout>
